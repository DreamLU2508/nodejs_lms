<div class="m-4">
    <h1>Chỉnh sửa thông tin người dùng</h1>

    <form method="POST" action="/users/{{user._id}}?_method=PUT">
        <div class="mb-3">
            <label for="name" class="form-label">Tên người dùng</label>
            <input type="text" class="form-control" id="name" name="name" value="{{user.name}}">
        </div>
        <div class="mb-3">
            <label for="email" class="form-label">Địa chỉ email</label>
            <input type="email" class="form-control" id="email" name="email" value="{{user.email}}">
        </div>
        <div class="mb-3">
            <label for="phone" class="form-label">Số điện thoại</label>
            <input type="text" class="form-control" id="phone" name="phone" value="{{user.phone}}">
        </div>
        <button type="submit" class="btn btn-primary">Cập nhật</button>
    </form>
</div>